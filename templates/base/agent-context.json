{
  "$schema": "./schemas/agent-context.schema.json",
  "version": "1.0.0",
  "workspace": {
    "name": "__REPO_NAME__",
    "purpose": "Generic agentic development environment",
    "root_path": ".",
    "prohibited_paths": [
      {
        "path": ".git",
        "reason": "Git internals"
      },
      {
        "path": "context-engineering/scan",
        "reason": "Generated scan outputs"
      }
    ],
    "risk_sensitive_areas": [
      {
        "area": ".github/workflows",
        "risk_level": "critical",
        "description": "Automation and deployment behavior",
        "mitigation": "Review with HITL for high/critical changes"
      },
      {
        "area": "scripts",
        "risk_level": "high",
        "description": "Operational scripts that may impact environments",
        "mitigation": "Use dry-run/read-only defaults"
      }
    ]
  },
  "documentation": {
    "governance": [
      {
        "name": "Agent Handbook",
        "path": "AGENTS.md",
        "purpose": "Primary operations policy"
      },
      {
        "name": "Safety Boundaries",
        "path": "doc/operations/agent-safety-boundaries.md",
        "purpose": "Risk classes and HITL gates"
      }
    ],
    "playbooks": [
      {
        "name": "Bugfix",
        "path": "doc/agents/playbooks/bugfix.md",
        "workflow_type": "reactive"
      },
      {
        "name": "Incident Response",
        "path": "doc/agents/playbooks/incident-response.md",
        "workflow_type": "reactive"
      },
      {
        "name": "Endpoint/Service Change",
        "path": "doc/agents/playbooks/endpoint-service-change.md",
        "workflow_type": "proactive"
      },
      {
        "name": "Refactor",
        "path": "doc/agents/playbooks/refactor.md",
        "workflow_type": "proactive"
      },
      {
        "name": "Release Prep",
        "path": "doc/agents/playbooks/release-prep.md",
        "workflow_type": "release"
      }
    ]
  },
  "scripts": {
    "preflight": "scripts/ci/preflight.sh",
    "context_validation": "scripts/context/validate_context.sh",
    "agent_context_validation": "scripts/validate_agent_context.sh",
    "llm_provider_validation": "scripts/ai/validate_provider.sh",
    "secret_scan": "scripts/secret-scan.sh"
  },
  "validation_commands": [
    "./scripts/ci/preflight.sh",
    "./scripts/validate_agent_context.sh",
    "./scripts/validate_markdown_links.sh",
    "./scripts/ai/validate_provider.sh"
  ]
}
