{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://klever.engineering/schemas/context-snapshot.schema.json",
  "title": "Context Snapshot Schema",
  "type": "object",
  "required": [
    "version",
    "snapshot_id",
    "timestamp",
    "domain",
    "source",
    "status",
    "data"
  ],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "snapshot_id": {
      "type": "string",
      "pattern": "^[a-z]+_\\d{8}_\\d{6}$"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "domain": {
      "type": "string",
      "enum": ["infrastructure", "aws", "grafana", "network", "code", "environment"]
    },
    "source": {
      "type": "object",
      "required": ["collector", "version"],
      "properties": {
        "collector": { "type": "string" },
        "version": { "type": "string" },
        "host": { "type": "string" },
        "agent": { "type": "string" }
      }
    },
    "status": {
      "type": "object",
      "required": ["success", "collected_at"],
      "properties": {
        "success": { "type": "boolean" },
        "collected_at": { "type": "string", "format": "date-time" },
        "completed_at": { "type": "string", "format": "date-time" },
        "duration_seconds": { "type": "number", "minimum": 0 },
        "errors": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["message", "severity"],
            "properties": {
              "message": { "type": "string" },
              "severity": { "type": "string", "enum": ["error", "warning", "info"] },
              "context": { "type": "string" }
            }
          }
        }
      }
    },
    "freshness": {
      "type": "object",
      "properties": {
        "ttl_hours": { "type": "integer", "minimum": 1 },
        "expires_at": { "type": "string", "format": "date-time" },
        "previous_snapshot_id": { "type": "string" }
      }
    },
    "data": {
      "type": "object",
      "additionalProperties": true
    },
    "metadata": {
      "type": "object",
      "properties": {
        "redacted_fields": {
          "type": "array",
          "items": { "type": "string" }
        },
        "tags": {
          "type": "array",
          "items": { "type": "string" }
        },
        "notes": { "type": "string" }
      }
    }
  }
}
